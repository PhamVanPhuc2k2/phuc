<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <form method="POST" action="/users/create-user">
                    <div class="mt-3"><h3>Create a new user:</h3></div>
                    <div class="mb-3 mt-3 col-6">
                        <label for="email" class="form-label">Email:</label>
                        <input
                            type="email"
                            class="form-control"
                            id="email"
                            placeholder="Enter email"
                            name="email"
                            required
                        />
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="password" class="form-label">Password:</label>
                        <input
                            type="password"
                            class="form-control"
                            id="password"
                            placeholder="Enter password"
                            name="password"
                            required
                        />
                    </div>
                    <div class="">
                        <div class="mb-3 mt-3 col-6">
                            <label for="email" class="form-label">Username</label>
                            <input
                                type="text"
                                class="form-control"
                                id="username"
                                placeholder="Enter username"
                                name="username"
                                required
                            />
                        </div>
                        <div class="col-6"></div>
                    </div>

                    <div class="col-12"><button type="submit" class="btn btn-primary">Submit</button></div>
                </form>
                <div>
                    <h3 class="mt-3">Table User</h3>
                    <table class="table table-hover table-bordered">
                        <thead>
                          <tr>
                            <th cope="col">ID</th>
                            <th cope="col">Email</th>
                            <th cope="col">Username</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% userList.forEach(function(item,index){ %>
                                <tr>
                                    <td cope="row"><%= item.id %></td>
                                    <td><%= item.email %></td>
                                    <td><%= item.username %></td>
                                    <td>
                                        <button type="button" class="btn btn-outline-warning">Edit</button>
                                        <form action="/delete-user/<%= item.id %>" method="POST">
                                            <button type="button" class="btn btn-outline-danger">Delete</button>
                                        </form>
                                    </td>
                                  </tr>
                            <% }) %>
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    </body>
</html>
